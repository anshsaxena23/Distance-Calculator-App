{
  "builds": [
    {
      "src": "distance_calculator/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "npm install && npm run build"
      }
    },
    {
      "src": "api_path/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "250mb",
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api_path/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "distance_calculator/build/$1"
    }
  ]
}
